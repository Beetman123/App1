<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="authenticate.ItemListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter item name"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/description_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter a description of the item"
            android:inputType="textLongMessage" />


        <EditText
            android:id="@+id/condition_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter item's condition"
            android:inputType="text"
            />


        <!--
        Do we want to let the user chose to sell or not?
        -->

<!--        <Switch
            android:id="@+id/sell_item_switch_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sell Item" />-->

        <EditText
            android:id="@+id/sell_amount_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="$"
            android:inputType="number" />

        <Switch
            android:id="@+id/trade_item_switch_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trade Item" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trade Item" />

        <EditText
            android:id="@+id/trade_want_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Describe what you want to trade for"/>


        <!--android:text="$"-->

        <Button
        android:id="@+id/add_item_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD ITEM" />




    </LinearLayout>
</FrameLayout>